        <h1 class="h3 mb-3 fw-normal">ADD USER</h1>       
 <div class="row col-xs-6 block2 center">   
        <form class="form-group">    
          

             <div class="container-sm">

                <div class="mb-2 row">
                    <!-- <label for="staticEmail" class="col-sm-2 col-form-label">Email</label> -->
                    <label for="input" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-9">
                      <!-- <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com"> -->
                      <input type="text" id="usernameInput" name="username" class="form-control" aria-describedby="username" placeholder="Username (John007)">
                    </div>
                  </div>

                
                  <div class="mb-2 row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-9">
                      <input type="password" class="form-control" id="passwordInput" name="password" placeholder="Password (-ABcde:fgh01)">
                    </div>
                    <div class="col-sm-6">
                        <span id="passwordHelpInline" class="form-text">
                            Must be 8-20 characters long.
                        </span>
                    </div>
                  </div>

                  <div class="mb-2 row">
                    <!-- <label for="staticEmail" class="col-sm-2 col-form-label">Email</label> -->
                    <label for="input" class="col-sm-2 col-form-label">Displayname</label>
                    <div class="col-sm-9">
                      <!-- <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com"> -->
                      <input type="text" id="displaynameInput" name="displayname" class="form-control" aria-describedby="displayname" placeholder="Displayname (John)">
                    </div>
                  </div>

                  <div class="mb-2 row">
                    <!-- <label for="staticEmail" class="col-sm-2 col-form-label">Email</label> -->
                    <label for="input" class="col-sm-2 col-form-label">Phone Number</label>
                    <div class="col-sm-9">
                      <!-- <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com"> -->
                      <input type="text" id="phonenumberInput" name="phonenumber" class="form-control" aria-describedby="phonenumber" placeholder="Phone Number (+00123456789)">
                    </div>
                  </div>

                  <div class="mb-2 row">
                    <!-- <label for="staticEmail" class="col-sm-2 col-form-label">Email</label> -->
                    <label for="input" class="col-sm-2 col-form-label">E-mail</label>
                    <div class="col-sm-9">
                      <!-- <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com"> -->
                      <input type="text" id="emailInput" name="email" class="form-control" aria-describedby="email" placeholder="E-mail (John@gmail.com)">
                    </div>
                  </div>

                  <div class="mb-2 row">
                    <!-- <label for="staticEmail" class="col-sm-2 col-form-label">Email</label> -->
                    <label for="input" class="col-sm-2 col-form-label">Location</label>
                    <div class="col-sm-9">
                      <!-- <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com"> -->
                      <input type="text" id="locationInput" name="location" class="form-control" aria-describedby="location" placeholder="Location (USA,UK,THAILAND)">
                    </div>
                  </div>
                  
        <br>
            <div class="from-group">
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
             </div>                        
                            
        </form>
